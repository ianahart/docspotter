<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head') %>
  </head>

  <body>
    <div class="container-fluid">
      <%- include('includes/nav') %>
        <%- include('includes/cookie') %>
      <%- include('includes/form') %>
     <% if (docData !== '') { %>


      <div class="output-container">
        <p class="results-found">Found <%= results %> Results:</p>
        <% docData.forEach(function(business)  { %>
          <div class="row">
            <div id="card"class="col col s4 offset-s4">
              <div  class="card">
                <div class="card-image">
                  <img src="<%= business.image_url%>">
                </div>
                <div class="card-content">
                   <span class="card-title"><%= business.name %></span>
                  <p><i class="material-icons left deep-purple-text darken-1">location_on</i><%= business.location.display_address %></p>
                  <br>
                  <p><i class="material-icons left deep-purple-text darken-1">phone</i><%= business.display_phone %></p>
                </div>
                <div class="card-action">
                  <a href="<%= business.url%>">Go To Yelp</a>
                  <p><i class="material-icons left yellow-text lighten-2">star</i> <%= business.rating%></p>
                </div>
              </div>
            </div>
          </div>
       <% }) %>
       <% } %>
      </div>
    <%- include('includes/footer') %>
    <script src="/js/form.js"></script>
  </body>
</html>
